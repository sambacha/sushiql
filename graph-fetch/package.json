{
    "name": "@genql/cli",
    "_": "[bump]",
    "version": "2.6.0",
    "description": "Generate a client sdl from your GraphQl API",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "url": "https://github.com/remorses/genql"
    },
    "mocha": {
        "require": "tests/init.js",
        "spec": "tests/**.ts",
        "timeout": 9999999999
    },
    "bin": {
        "genql": "./dist/cli.js"
    },
    "files": [
        "/dist/*",
        "/esm/*",
        "src"
    ],
    "scripts": {
        "start": "tsdx watch",
        "build": "rm -rf dist esm *.tsbuildinfo && tsc",
        "test": "jest",
        "compile": "sucrase -q ./src -d ./dist --transforms typescript,imports",
        "watch": "tsc -w"
    },
    "keywords": [],
    "author": "Tommaso De Rossi, morse <beats.by.morse@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@sucrase/jest-plugin": "^2.0.0",
        "@types/common-tags": "^1.8.0",
        "@types/jest": "^23.3.13",
        "@types/listr": "^0.13.0",
        "@types/lodash": "^4.14.161",
        "@types/mkdirp": "^0.5.2",
        "@types/node": "^14.0.14",
        "@types/rimraf": "^2.0.2",
        "common-tags": "^1.8.0",
        "dotenv": "^8.2.0",
        "husky": "^1.3.1",
        "jest": ">=22 <24",
        "pretty-quick": "^1.10.0",
        "sucrase": "^3.12.1",
        "ts-jest": "^23.10.5"
    },
    "dependencies": {
        "@genql/runtime": "^2.6.0",
        "@graphql-tools/graphql-file-loader": "^6.0.10",
        "@graphql-tools/load": "^6.0.10",
        "@types/node": "*",
        "@types/prettier": "^1.19.0",
        "@types/yargs": "^15.0.5",
        "chalk": "^4.1.0",
        "fs-extra": "^9.0.1",
        "graphql": "*",
        "isomorphic-unfetch": "^3.0.0",
        "listr": "^0.14.3",
        "lodash": "^4.17.20",
        "mkdirp": "^0.5.1",
        "prettier": "^1.19.1",
        "qs": "^6.9.1",
        "rimraf": "^2.6.3",
        "yargs": "^15.3.1"
    },
    "jest": {
        "transform": {
            ".(js|jsx|ts|tsx)": "@sucrase/jest-plugin"
        },
        "roots": [
            "<rootDir>/src"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**",
            "!src/_old/**",
            "!**/*.case.ts",
            "!src/testHelpers/**/*.ts"
        ],
        "coverageReporters": [
            "text"
        ]
    },
    "gitHead": "4e431e1a6e2cea513cad91614f3a9ef794f94d07"
}
